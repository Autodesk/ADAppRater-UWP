<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppRater.Theme">

    <!-- Font sizes -->
    <x:Double x:Key="FontSizeBig">32</x:Double>
    <x:Double x:Key="FontSizeTitle">24</x:Double>
    <x:Double x:Key="FontSizeDescription">18</x:Double>
    <x:Double x:Key="FontSizePostText">17</x:Double>
    <x:Double x:Key="FontSizeSmall">14</x:Double>
    <x:Double x:Key="FontSizeButton">17</x:Double>
    <x:Double x:Key="FontSizeIcon">12</x:Double>
    
    <!-- UWP font sizes -->
    <x:Double x:Key="FontSizeKDContent">20</x:Double>
    <x:Double x:Key="FontSizeHeading20px">20</x:Double>
    <x:Double x:Key="FontSizeSubtitle">18</x:Double>
    <x:Double x:Key="FontSizeItem">18</x:Double>
    <x:Double x:Key="FontSizeBody">15</x:Double>
    <x:Double x:Key="FontSizeCaption">12</x:Double>
    
    <!-- Font -->
    <FontFamily x:Key="TextFontRegular">/Assets/Fonts/ArtifaktScreen-Book500.ttf#Artifakt Screen 500</FontFamily>
    <FontFamily x:Key="TextFontRegularLight">/Assets/Fonts/ArtifaktScreen-Light300.ttf#Artifakt Screen 300</FontFamily>
    <FontFamily x:Key="TextFontHeader">/Assets/Fonts/ArtifaktScreen-Medium600.ttf#Artifakt Screen 600</FontFamily>
    <FontFamily x:Key="TextFontRegularAppRater">Segoe UI</FontFamily>
    <TextWrapping x:Key="TextFontWrapping">WrapWholeWords</TextWrapping>

</ResourceDictionary>
