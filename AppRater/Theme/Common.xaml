    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppRater.Theme">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Thickness x:Key="ThicknessTextBoxPadding">12</Thickness>
    <x:Double x:Key="FontSizeFlyoutItemDefault">16</x:Double>
    <x:Double x:Key="FontSizeButtonTransparentDefault">15</x:Double>
    <x:Double x:Key="FontSizeTextBoxDefault">22</x:Double>
    <x:Double x:Key="FontSizeQuestionMarkDefault">24</x:Double>
    <x:Double x:Key="HeightTextBoxDefault">48</x:Double>
    <Thickness x:Key="ThicknessTextBoxDefault">0</Thickness>


</ResourceDictionary>
